      h5.section__title.t-size-30=title
    .section__content
      .slider.slider_default.arrows.ctlg-slider
        .slide
          +slide1()
        .slide
          +slide2()
        .slide
          +slide1()
        .slide
          +slide2()
        .slide
          +slide1()
