  .ctlg-nav
    .container
      mixin itemSmall(title)
        li.ctlg-nav-s__item
          a(href="#").ctlg-nav-s__link.js-animated=title
      //main item
      mixin item(title)
        .ctlg-nav-m__item
          a(href="#").ctlg-nav-m__link.js-animated=title 
            i.fas.fa-chevron-right
      mixin item2(title)
        .ctlg-nav-m__item
          a(href="#").ctlg-nav-m__link.js-animated=title 
            i.fas.fa-chevron-right
          .ctlg-nav-s
            .scroll-container.shadow.shadow_style1
              .scroll-child
                ul.ctlg-nav-s__list
                  //ссылка на родительскую категорию для мобильных
                  li.ctlg-nav-s__item
                    a(href="#").ctlg-nav-s__link.js-animated Все товары категории
                  +itemSmall('Enchantimals')
                  +itemSmall('Barbie')
                  +itemSmall('Baby Born')
                  +itemSmall('Monster High')
                  +itemSmall('Baby Annabell')
                  +itemSmall('Disney Princess')
                  +itemSmall('Куклы My Little Pony Equestria Girls ')
                  +itemSmall('Холодное сердце')
                  +itemSmall('Ever After High')
                  +itemSmall('Shibajuku Girls')
                  +itemSmall('Lady Bug')
                  +itemSmall('Ever After High')
                  +itemSmall('Мягкие куклы')
                  +itemSmall('Baby Alive')
                  +itemSmall('Lalaloopsy')
      .ctlg-nav-m
        ul.ctlg-nav-m__list
          +item2('Куклы L.O.L.')
          +item('Конструкторы LEGO Конструкторы LEGO Конструкторы LEGO')
